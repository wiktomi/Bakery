<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        body {
            padding: 0px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="@Url.Action("Index","Home")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("About","Home")">O cukierni</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact","Home")">Kontakt</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Cukiernia Dane
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="@Url.Action("Index","Accesories")">Akcesoria</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Additives")">Dodatki</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Adresses")">Adres</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","CakeCreators")">Kreator Tortów</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Categories")">Kategoria</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Companies")">Firma</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Creams")">Krem</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Customers")">Klient</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Fillings")">Wypełnienie</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Finishes")">Wykończenie</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","FinishedOrders")">Ukończone zamówienia</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Icings")">Środek(dżem)</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Levels")">Poziomy</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Orders")">Zamówienia</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","OrderDetails")">Szczegóły zamówienia</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Products")">Produkty</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","Shapes")">Kształt</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index","SpongeCakes")">Biszkopt</a></li>
                            
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    
    @RenderSection("scripts", required: false)
</body>
</html>
